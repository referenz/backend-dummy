---
import ButtonEditForm from "../ButtonEditForm.astro";
import ButtonDelete from "../ButtonDelete.astro";
---

<table class="table table-striped table-hover">
  <caption class="caption-top">Stammdaten</caption>
  <tr><td>Dokumenten-Nummer</td><td>79R01E</td></tr>
  <tr><td>Träger</td><td>Helden - Verein für nachhaltige Bildung und Persönlichkeitsentwicklung</td></tr>
  <tr
    ><td>Projektvorhaben</td><td
      >Escape the extremism - Entwicklung und Durchführung eines mobilen pädagogischen Escape Rooms zum Thema
      Extremismus</td
    ></tr
  >
  <tr><td>Aktueller Status</td><td><span class="badge badge-pill bg-success">Antragsaufforderung versendet</span></td></tr>
  <tr><td>Interessenbekundung eingereicht</td><td>2024-05-29, 14:58 Uhr</td></tr>
  <tr><td>Letzte Änderung</td><td>2024-07-14, 11:01 Uhr / ryounes</td></tr>
</table>

<section>
  <table class="table table-striped table-hover align-middle">
    <caption class="caption-top">Interne Bemerkungen</caption>
    <thead>
      <tr><th>Bearbeiter/in</th><th>Datum</th><th>Bemerkung</th><th>Aktion</th></tr>
    </thead>
    <tbody>
      <tr>
        <td>ryounes</td>
        <td>2024-06-14, 13:21 Uhr</td>
        <td>individuell festlegbare interne Bemerkung zum aktuellen IBK</td>
        <td><ButtonEditForm /> {" "} <ButtonDelete /></td>
      </tr>
    </tbody>
  </table>
  <button class="btn btn-sm btn-secondary" data-bs-toggle="modal" data-bs-target="#bemerkung-modal"
    >Bemerkungen hinzufügen</button
  >

  <!-- Modal -->
  <div class="modal fade" id="bemerkung-modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="modalLabel"><label for="bemerkung">Bemerkungen bearbeiten</label></h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
        </div>
        <div class="modal-body">
          <textarea class="form-control" id="bemerkung"
            >individuell festlegbare interne Bemerkung zum aktuellen IBK</textarea
          >
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
          <button type="button" class="btn btn-primary">Speichern</button>
        </div>
      </div>
    </div>
  </div>
</section>

<table class="table table-striped table-hover">
  <caption class="caption-top">Formelle Prüfung</caption>
  <tr><td>Prüfer/in</td><td>ryounes</td></tr>
  <tr><td>BAFzA-Vorschlag formelles Votum</td><td>formelle Prüfung bestanden, 2024-06-04</td></tr>
  <tr><td>BMFSFJ-Entscheidung formelles Votum</td><td>formelle Prüfung bestanden, 2024-06-20</td></tr>
</table>

<table class="table table-striped table-hover">
  <caption class="caption-top">Sachliche Prüfung</caption>
  <tbody>
    <tr><td>Gutachter/in 1</td><td>Max Mustermann</td></tr>
    <tr><td>Begutachtungsergebnis 1</td><td>81 Punkte (Förderpriorität 2)</td></tr>
  </tbody>
  <tbody>
    <tr><td>Gutachter/in 2</td><td>Erika Meyerfrau</td></tr>
    <tr><td>Begutachtungsergebnis 2</td><td>90 Punkte (Förderpriorität 1)</td></tr>
  </tbody>
  <tbody>
    <tr><td>BAFzA-Vorschlag Förderpriorität</td><td>Förderpriorität 1, 2024-07-01</td></tr>
    <tr><td>BMFSFJ-Entscheidung Förderpriorität</td><td>Förderpriorität 1, 2024-07-14</td></tr>
  </tbody>
</table>

<style>
  table {
    font-size: 90%;
  }

  tbody + tbody {
    border-top: 2px dotted #bbb;
  }

  td:not(section td):first-child {
    width: 20em;
  }

  caption {
    font-weight: bold;
  }

  section {
    margin-bottom: 1.25em;
  }

  section table {
    margin-bottom: 0.5em;
  }

  section :where(td, th):last-of-type {
    text-align: right;
  }

  section th {
    color: var(--bs-secondary-color);
  }

  section button[data-bs-toggle] {
    background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-plus-circle" viewBox="0 0 16 16"><path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/><path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/></svg>');
    background-repeat: no-repeat;
    background-position: 3px center;
    padding-left: 1.75em;
  }
</style>
