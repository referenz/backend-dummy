---
interface Props {
	title: string;
}

const { title } = Astro.props;

import { ViewTransitions } from 'astro:transitions';

import 'bootstrap/dist/css/bootstrap.css'
import NavCol from '../components/NavCol.astro';
import TopRow from '../components/TopRow.astro';
---

<!DOCTYPE html>
<html lang="de">
	<head>
		<ViewTransitions />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script src="../../node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
		<title>Backend-Dummy: {title}</title>
	</head>
	<body>
		<header><TopRow /></header>
		<nav><NavCol /></nav>
		<main><slot /></main>
	</body>
</html>

<style is:global>
	:root {
		--base-color: rgb(218, 237, 238);
		--nav-color: rgb(227, 231, 237);

		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
	}
</style>
<style>
	body {
		display: grid;
		grid-template-columns: auto 1fr;
		grid-template-rows: auto 1fr;
		grid-template-areas:
			'header header'
			'nav main';
		grid-auto-flow: dense;
		height: 100vh;
	}

	header {
		grid-area: header;
		align-self: start;
		height: auto;
		margin: 0;
		/* border-bottom: 1px solid #000; */

		display: flex;
		justify-content: space-between;
		padding: 10px 4px;

		overflow: auto;

		background-color: var(--base-color);
	}

	nav {
		grid-area: nav;
		/* background-color: #eee; */
		/*background: linear-gradient(var(--base-color), #fff);*/
		/*height: 100vh;*/
		/*width: 15em;*/
		overflow: auto;
		/*border-right: 1px solid #000;*/
        width: 225px;
		padding-left: 3px;
		padding-right: 3px;

	}

	main {
		grid-area: main;
		/* background-color: #eee; */
		/*background: linear-gradient(#fff, #d0d0d0);*/
		overflow: auto;
		padding-left: 3px;
		padding-top: 3px;

		box-shadow: 3px 6px 5px 6px #ccc;
		/*box-shadow: inset 0 0 10px #ccc;*/
	}
</style>
